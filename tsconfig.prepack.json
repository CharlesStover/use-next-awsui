{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declarationDir": "dist",
    "jsx": "react-jsx",
    "noEmit": false,
    "outDir": "dist",
    "rootDir": "src",
    "sourceRoot": "src",
    /**
     * next/dist/server/next-server.d.ts
     *   Property "sendRenderResult" in type "NextNodeServer" is not assignable to
     *   the same property in base type "Server<Options>".
     */
    "skipLibCheck": true
  },
  "exclude": ["src/**/*.test.ts", "src/**/*.test.tsx", "src/test/"],
  "include": ["src/"]
}
